<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/promotion_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:alpha="0.4"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/transparent">

            <TextView
                android:id="@+id/promotion_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="title"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:background="@color/transparent"/>
            <TextView
                android:id="@+id/promotion_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="time"
                android:gravity="center"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:background="@color/transparent"
                android:visibility="invisible"/>
        </LinearLayout>
        <TextView
            android:id="@+id/promotion_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:gravity="center"
            android:textSize="@dimen/text_size_super_large"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:layout_alignParentBottom="true"
            android:paddingBottom="5dp"
            />
        <TextView
            android:id="@+id/promotion_img_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="img num"
            android:gravity="right"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            />
    </RelativeLayout>


</LinearLayout>