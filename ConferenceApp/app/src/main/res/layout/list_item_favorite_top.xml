<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:gravity="top"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ranking_container"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.15"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/round_right_rect_shape_blue">

        <TextView
            android:id="@+id/ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_super_super_large"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:paddingRight="5dp"
        android:layout_gravity="center">


        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/noavatar"/>

            <TextView
                android:id="@+id/name_short_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/vote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_large"
                android:text="Vote: 10"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_normal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="John Smith"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>