<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout
        android:id="@id/recyclerview_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text="Delete"
                android:textSize="@dimen/text_size_small"
                android:layout_gravity="center"
                android:textColor="@color/btn_delete_color"/>

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/content_layout"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/user_info_layout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/avatar_layout"
                            android:layout_width="40dp"
                            android:clickable="true"
                            android:layout_height="40dp">
                            <TextView
                                android:id="@+id/empty_profile_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/empty_profile_background"
                                android:textSize="@dimen/text_size_large"
                                android:textColor="#ffffff"
                                android:gravity="center"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/avatar_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/empty_profile"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/gray"
                            android:layout_alignParentRight="true"
                            />
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@id/avatar_layout"
                            android:layout_toLeftOf="@id/time_tv">
                            <TextView
                                android:id="@+id/title_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="title"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_color"
                                android:gravity="left|top"
                                android:layout_marginTop="3dp"
                                android:layout_alignParentLeft="true"
                                />
                            <TextView
                                android:id="@+id/name_tv"
                                android:clickable="true"
                                android:singleLine="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/gray"
                                android:gravity="left|center_vertical"
                                />

                        </LinearLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/info_layout"
                        android:layout_below="@id/user_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp">
                        <TextView
                            android:id="@+id/comments_no_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="8 comments"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/likes_no_tv"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="4 likes"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorPrimary"
                            android:singleLine="true"
                            android:layout_toLeftOf="@id/comments_no_tv"
                            android:gravity="right|center_vertical"
                            />
                        <ImageView
                            android:id="@+id/report_btn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:clickable="true"
                            android:layout_toLeftOf="@id/comments_no_tv"
                            android:src="@drawable/icon_flag"/>
                        <ImageView
                            android:id="@+id/likeBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:clickable="true"
                            android:src="@drawable/icon_heart"/>
                        <ImageView
                            android:id="@+id/commentBtn"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/likeBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_chat_brown"/>
                    </RelativeLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider"/>
            </LinearLayout>
            <View
                android:id="@+id/disable_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.2"/>
        </RelativeLayout>

    </com.marshalchen.ultimaterecyclerview.swipe.SwipeLayout>
</LinearLayout>