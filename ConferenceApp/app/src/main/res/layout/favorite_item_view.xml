<?xml version="1.0" encoding="utf-8"?>
<sg.edu.smu.livelabs.mobicom.views.FavoriteItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ScrollView-->
        <!--android:id="@+id/container"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:fillViewport="true">-->

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_super_large"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/top"
                        android:layout_width="@dimen/item_height"
                        android:layout_height="@dimen/item_height"
                        android:src="@drawable/icon_ranking_new"
                        android:layout_alignParentRight="true"/>

                </LinearLayout>


            </LinearLayout>



            <!--<sg.edu.smu.livelabs.conferenceapp.views.CustomGridView-->
            <GridView
                android:id="@+id/items"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                android:padding="5dp"
                android:numColumns="3" />

        </LinearLayout>

    <!--</ScrollView>-->




    <TextView
        android:id="@+id/no_result_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:hint="@string/no_internet_connection"
        android:textSize="@dimen/text_size_super_large"
        android:textColor="@color/dark_grey"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:visibility="gone"/>


</sg.edu.smu.livelabs.mobicom.views.FavoriteItemView>