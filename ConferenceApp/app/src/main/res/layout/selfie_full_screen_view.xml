<?xml version="1.0" encoding="utf-8"?>
<sg.edu.smu.livelabs.mobicom.views.SelfieFullScreenView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
            android:alpha="0.25"/>
        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/footer_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:alpha="0.7"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="10dp"
                    >
                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icon_heart"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/download"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/icon_download"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/report"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/icon_flag"
                        android:scaleType="centerInside"
                        android:layout_weight="1"/>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:id="@+id/divider"
                android:layout_above="@id/footer_layout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_above="@id/divider"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/likeno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="likes"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_normal"
                    />
                <TextView
                    android:id="@+id/token"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="token"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_large"
                    />
                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="date"
                    android:textColor="@color/grey"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_normal"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/info_layout"
                android:gravity="left"
                android:text="desc"
                android:textColor="@color/grey"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:maxLines="3"
                android:textSize="@dimen/text_size_normal"
                />
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/editBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/icon_edit_white"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

    </RelativeLayout>



</sg.edu.smu.livelabs.mobicom.views.SelfieFullScreenView>