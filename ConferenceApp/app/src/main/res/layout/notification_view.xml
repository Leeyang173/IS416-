<?xml version="1.0" encoding="utf-8"?>
<sg.edu.smu.livelabs.mobicom.views.NotificationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/select_userpool_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:clickable="true"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/colorPrimary"
        android:singleLine="true"
        android:text="Select userpool to send"
        android:background="@drawable/round_rect_selected"/>
    <EditText
        android:id="@+id/message_edit_text"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/round_rect_border"
        android:gravity="top|left"
        android:padding="10dp"
        android:hint="Type a message"/>

</sg.edu.smu.livelabs.mobicom.views.NotificationView>